<Window x:Name="rcopy_gui" x:Class="rcopy_gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="rcopy-gui" Height="420" Width="700">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8" Grid.Row="0">
            <Label Width="80" VerticalAlignment="Center">Source:</Label>
            <TextBox Text="{Binding Source, UpdateSourceTrigger=PropertyChanged}" Width="520"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8" Grid.Row="1">
            <Label Width="80" VerticalAlignment="Center">Destination:</Label>
            <TextBox Text="{Binding Destination, UpdateSourceTrigger=PropertyChanged}" Width="520"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8" Grid.Row="2">
            <Label Width="80" VerticalAlignment="Center">Options:</Label>
            <TextBox Text="{Binding Options, UpdateSourceTrigger=PropertyChanged}" Width="520"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8" Grid.Row="3">
            <Button Content="Start" Width="100" Margin="0,0,8,0" Command="{Binding StartCommand}"/>
            <Button Content="Cancel" Width="100" Command="{Binding CancelCommand}"/>
            <ProgressBar Value="{Binding Progress, Mode=OneWay}" />
        </StackPanel>

        <TextBox Grid.Row="4"
                 Text="{Binding Log, Mode=OneWay}"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"/>

        <TextBlock Grid.Row="5" Margin="0,8,0,0" FontSize="11" Foreground="Gray"
                   Text="Note: robocopy must be available on PATH. Some operations may require elevation."/>
    </Grid>
</Window>