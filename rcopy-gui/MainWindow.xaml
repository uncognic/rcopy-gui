<Window x:Name="rcopy_gui" x:Class="rcopy_gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:rcopy_gui"
        Title="rcopy-gui" Height="420" Width="700">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8" Grid.Row="0">
            <Label Width="80" VerticalAlignment="Center">Source:</Label>
            <TextBox Text="{Binding Source, UpdateSourceTrigger=PropertyChanged}" Width="440" Margin="0,0,10,0"/>
            <Button Width="130" Content="Browse" Command="{Binding BrowseSourceCommand}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8" Grid.Row="1">
            <Label Width="80" VerticalAlignment="Center">Destination:</Label>
            <TextBox Text="{Binding Destination, UpdateSourceTrigger=PropertyChanged}" Width="440" Margin="0,0,10,0"/>
            <Button Width="130" Content="Browse" Command="{Binding BrowseDestinationCommand}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8" Grid.Row="2">
            <Label Width="80" VerticalAlignment="Center" >Options:</Label>
            <TextBox Text="{Binding Options, UpdateSourceTrigger=PropertyChanged}" Width="440" Margin="0,0,10,0" IsReadOnly="True"/>
            <ComboBox Width="130" HorizontalAlignment="Left"
                      SelectedValuePath="Tag"
                      SelectedValue="{Binding Mode, Mode=TwoWay}">
                <ComboBoxItem Tag="{x:Static local:CopyMode.RegularCopy}" Content="Regular copy" />
                <ComboBoxItem Tag="{x:Static local:CopyMode.Backup}" Content="Backup (requires elevation)" />
            </ComboBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8" Grid.Row="3">
            <Button Content="Start" Width="100" Margin="0,0,8,0" Command="{Binding StartCommand}"/>
            <Button Content="Cancel" Width="100" Command="{Binding CancelCommand}" Margin="0,0,10,0"/>
            <ProgressBar Value="{Binding Progress, Mode=OneWay}" MinWidth="442" />
        </StackPanel>

        <TextBox Grid.Row="4"
                 Text="{Binding Log, Mode=OneWay}"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"/>

        
    </Grid>
</Window>